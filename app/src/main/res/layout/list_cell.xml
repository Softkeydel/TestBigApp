<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imv_album"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/jannat" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="EMPTINESS FT.JUSTIN TIBLEKAR"
                android:textSize="@dimen/large_text_size"
                android:textColor="#000"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/imv_album"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text=" 18 HOURS AGO"
                android:textSize="@dimen/small_text_size"
                android:drawableLeft="@drawable/about_us"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_below="@+id/tv_title"
                android:layout_toRightOf="@+id/imv_album"/>

            <TextView
                android:id="@+id/tv_short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shrt_decs_text"
                android:maxLines="3"
                android:textSize="@dimen/mid_text_size"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_below="@+id/tv_time"
                android:layout_toRightOf="@+id/imv_album"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>